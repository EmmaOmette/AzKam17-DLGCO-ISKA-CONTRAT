{% extends 'base.html.twig' %}

{% block title %}Demande d'avis / conseil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <meta name="turbo-visit-control" content="reload">
    <link rel="stylesheet" href="{{ asset('plugins/summernote/summernote-bs4.min.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('plugins/summernote/summernote-bs4.min.js') }}" defer></script>
    {{ encore_entry_script_tags('gestion_contractuelle_avis_new') }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <div class="card card-primary">
                <div class="card-header">
                    <div class="card-title">
                        Effectuer une demande d'avis / conseil
                    </div>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="card-body">
                        <h4 class="mt-3">Demande d'avis / conseil</h4>
                        <hr>
                        <div class="row mt-2">
                            <div class="col">
                                <div class="form-group">
                                    <label for="">{{ form_label(form.objet) }}</label>
                                    {{ form_widget(form.objet) }}
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col">
                                <div class="form-group">
                                    <label for="">{{ form_label(form.niveauExecution) }}</label>
                                    {{ form_widget(form.niveauExecution) }}
                                </div>
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col">
                                <div class="form-group">
                                    <label for="">{{ form_label(form.rensignement) }}</label>
                                    {{ form_widget(form.rensignement) }}
                                </div>
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col">
                                <div class="form-group">
                                    <label for="">{{ form_label(form.documents) }}</label>
                                    {{ form_widget(form.documents) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-lg btn-info"
                        {{ is_granted('ROLE_JURIDIQUE') and (avis.currentState == "waiting_for_attribution") ? 'style="display: none;" : '' }}
                >{{ button_label|default('Effectuer la demande') }}</button>
                {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('app_gestion_avis_conseils_avis_index') }}">back to list</a>
{% endblock %}
